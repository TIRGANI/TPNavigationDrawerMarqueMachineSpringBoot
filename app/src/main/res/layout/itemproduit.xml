<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="code" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nom" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DAte" />

            <TextView
                android:id="@+id/pnom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000dh" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Achat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prix" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ref" />

            <TextView
                android:id="@+id/pprix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="marque id" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>